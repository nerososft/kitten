<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

<context:property-placeholder location="classpath:config-provider.properties"/>

        <!-- 配置服务发现组件 -->
<bean id="ServiceDiscovery" class="org.nero.kitten.kitten.core.ServiceDiscovery">
<constructor-arg name="registryAddress" value="${registry.address}"/>
</bean>

        <!-- 配置 RPC 代理 -->
<bean id="KittenProxy" class="org.nero.kitten.kitten.core.KittenProxy">
<constructor-arg name="serviceDiscovery" ref="ServiceDiscovery"/>
</bean>
</beans>